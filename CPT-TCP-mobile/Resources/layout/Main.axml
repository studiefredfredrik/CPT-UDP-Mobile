<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TwoLineListItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/twoLineListItem1" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="307.8dp"
        android:id="@+id/editText2"
        android:text="Messages:"
        android:gravity="top"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:verticalScrollbarPosition="right"
        android:layout_marginBottom="0.0dp"
        android:textSize="10sp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="382.4dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <EditText
            android:id="@+id/editText1"
            android:text="127.0.0.1"
            android:layout_width="115.7dp"
            android:layout_height="48.4dp"
            android:layout_marginRight="0dp"
            android:textSize="12sp" />
        <TextView
            android:text="&lt;--Remote | Local ip --&gt;"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="23.4dp"
            android:id="@+id/textView2"
            android:textSize="12sp" />
        <EditText
            android:layout_width="132.0dp"
            android:layout_height="match_parent"
            android:id="@+id/editText4"
            android:textSize="12sp" />
    </LinearLayout>
    <Button
        android:text="@string/connect"
        android:layout_width="match_parent"
        android:layout_height="39.7dp"
        android:id="@+id/button1"
        android:onClick="btnConnect_click"
        android:textSize="12sp" />
    <Button
        android:text="@string/encrypt"
        android:layout_width="match_parent"
        android:layout_height="38.8dp"
        android:id="@+id/button2"
        android:onClick="btnEncrypt_click"
        android:textSize="12sp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="379.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <TextView
            android:text="Type message:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="86.1dp"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:layout_marginTop="19.2dp" />
        <EditText
            android:id="@+id/editText3"
            android:layout_width="204.6dp"
            android:layout_height="match_parent"
            android:textSize="12sp" />
        <Button
            android:text="@string/send"
            android:id="@+id/button3"
            android:onClick="btnSend_click"
            android:layout_width="79.7dp"
            android:layout_height="match_parent"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>